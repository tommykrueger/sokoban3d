
.socials
	margin: 0 0 30px 0
	display: inline-block
	
	li
		margin: 0 8px
		display: block
		float: left
		
		a
			width: auto
			padding: 6px 16px
			color: $colors.white
			display: block
			line-height: 32px
			text-align: center
			background-color: $colors.primary
			border-radius: 50%
			transition: unquote($settings.transition)
			

		&.facebook
			
			& > a
				background-color: $socials.facebook
				
		&.twitter
			
			& > a
				background-color: $socials.twitter
				
		&.googleplus
			
			& > a
				background-color: $socials.googleplus
				
		&.pinterest
			
			& > a
				background-color: $socials.pinterest
			
