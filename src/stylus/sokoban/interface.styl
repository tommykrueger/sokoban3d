
#interface
	width: 96%
	height: 52px
	margin: 2%
	position: absolute
	top: 0 
	left: 0
	z-index: 10
	text-align: center
	background: linear-gradient(top, rgba(50,50,50,0.85), rgba(30,30,30,0.9))
	border-top: 1px solid #333
	border-bottom: 1px solid #222
	

	.time
	.points
	.moves
	.moves-boxes
		margin: 0 20px
		display: inline-block
		font-size: 20px
		line-height: 46px
		text-transform: uppercase
		
		.icon
			color: #999

		.time-seconds
		.points-number
		.moves-number
		.moves-boxes-number	
			color: #fff 
			font-size: 26px 




#buttons
	
	margin: 2%
	position: absolute
	bottom: 0 
	left: 0
	z-index: 10
	text-align: left
	//background: linear-gradient(top, rgba(50,50,50,0.85), rgba(30,30,30,0.9))
	//border-top: 1px solid #333
	//border-bottom: 1px solid #222 
		


#items
	
	position: absolute
	right: 2%
	top: 110px
	

	.item
		width: 56px
		height: 56px
		display: block
		margin: 0 0 10px 0 
		
		color: $colors.white
		font-size: 13px
		cursor: pointer
		text-align: center
		text-decoration: none
		
		border-width: 3px
		border-style: solid
		border-color: lighten($colors.primary, 10%)
		border-radius: 50%
		
		box-shadow: 0 0 5px alpha($colors.black, 10%)
		background-color: $colors.primary
		background: linear-gradient(top, $colors.primary, darken($colors.primary, 15%))
		
		transition: all 150ms ease-in-out
		



#controls
	
	margin: 2%
	position: fixed
	right: 0
	bottom: 0
	
	.button
		position: absolute
	
	.button-up
		right: 80px
		bottom: 80px
		
	.button-left
		right: 160px
		bottom: 0
		
	.button-down
		right: 80px
		bottom: 0
		
	.button-right
		right: 0
		bottom: 0
		
		
		
	
		


